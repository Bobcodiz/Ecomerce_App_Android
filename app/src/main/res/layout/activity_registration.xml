<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Registration.RegistrationActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/reg_page_desc"
        android:scaleType="centerCrop"
        android:background="@color/dividerColor"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="181dp"
        android:fontFamily="serif-monospace"
        android:text="@string/reg_page_title"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:translationY="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.059"
        tools:targetApi="p" />

    <EditText
        android:id="@+id/reg_username"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_marginTop="84dp"
        android:autofillHints="Username"
        android:background="@drawable/border_shape"
        android:drawableStart="@drawable/username_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center_vertical|start"
        android:hint="@string/username"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:autofillHints="Password"
        android:background="@drawable/border_shape"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/password_icon"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/password"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_username" />

    <EditText
        android:id="@+id/reg_confirm_password"
        android:layout_width="306dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:autofillHints="Confirm_Password"
        android:background="@drawable/border_shape"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawableStart="@drawable/password_icon"
        android:textColor="@color/white"
        android:ems="10"
        android:drawablePadding="10dp"
        android:hint="@string/con_password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_password" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="227dp"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/border_shape"
        android:backgroundTint="#f2630d"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_confirm_password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/already_have_an_account"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

    <TextView
        android:id="@+id/login_page_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textColor="#f2630d"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>