<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Image Container with Rounded Edges -->

    <!-- Title Text -->

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="500dp"
        android:layout_height="440dp"
        android:background="@drawable/rounded_container_background">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dress" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Find Your\nBest Style"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:fontFamily="@font/your_font_here"
        android:lineSpacingExtra="8dp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Join and discover the best style\naccording to your passion"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:fontFamily="@font/your_font_here"
        android:lineSpacingExtra="4dp" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/subtitle_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/your_font_here"
        android:textStyle="bold" />
</RelativeLayout>
