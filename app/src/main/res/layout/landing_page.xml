<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/your_image_here"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Find Your\nBest Style"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/your_font_here"
        android:lineSpacingExtra="4dp"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Join and discover the best style\naccording to your passion"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:fontFamily="@font/your_font_here"
        android:lineSpacingExtra="3dp" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/subtitle_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/your_font_here"
        android:textStyle="bold" />
</RelativeLayout>
    intLayout>